!!! 5
%html
	%head
		%title TodoKemp
		%link{:rel =>"stylesheet", :type =>"text/css", :href =>"css/styles.css"}
		%link{:href=>'http://fonts.googleapis.com/css?family=Judson', :rel=>'stylesheet', :type=>'text/css'}

		%script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"}
		%script{:src => "https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.18/jquery-ui.min.js"}		
		%script{:src => "scripts/underscore-min.js"}
		
		
	%body
		#header
			%span.appName TodoKemp
		#entry
			%form{:name=>"taskForm"}
				#greeting
					%span What's your task? 
				%input.todoText{:type => "text", :name=>"todotext"}
				-#%input.submitButton{:type => "submit", :value=> "Submit"}

		#taskList
			%ul{:id=>"tasks"}

		#footer
			Joel Kemp, @mrjoelkemp